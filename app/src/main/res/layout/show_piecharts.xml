<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="查询日期"/>

        <EditText
            android:id="@+id/mEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ems="10" />

        <ImageButton android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/search_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="#FF4542"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="灯饰"/>
        <TextView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="#9CCF00"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="照明"/>
        <TextView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="#AD65CE"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="水泵"/>
        <TextView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="#31B6E7"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="电梯"/>
        <TextView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="#FFBA31"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="水泵"/>

    </LinearLayout>
    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/pie_charts"
        android:layout_width="215dp"
        android:layout_height="242dp"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"/>

   <!-- <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FF0000FF">
        <TextView
            android:id="@+id/pie_text"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pie_value"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ListView>-->
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/pie_text"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灯饰"/>
            <TextView
                android:id="@+id/pie_value"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn"
        android:layout_width="98dp"
        android:layout_height="104dp"
        android:text="更新"/>
    
</LinearLayout>
</ScrollView>